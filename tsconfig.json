{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "es2020",
      "dom"
    ],
    "types": ["node"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "temp",
    "strict": false,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "Client-Config": ["src/config/client-config.ts"],
      "Client-Routes": ["src/client/Routes"],
      "Client-Store": ["src/client/Store"],
    }
  },
  "exclude": ["node_modules"],
  "include": [ "./src/**/*" ]
}
